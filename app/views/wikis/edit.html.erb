<h1>Edit Wiki Collaborators</h1>
  <%= render partial: 'form', locals: { wiki: @wiki } %>

  <% if current_user.role == 'premium' %>
  
  <% @users.each do |user| %>
    <%= user.name %>  
      <div class="form-group">  
      <% if @wiki.users.include? user %>
        <%= link_to "Delete Collaborator", wiki_collaborator_path(@wiki, @wiki.collaborator_for(user)), method: :delete, class: 'btn btn-danger' %>
        <% else %>
        <%= link_to "Add Collaborator", wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: 'btn btn-success' %>
      <% end %>
    </div>
  <% end %>
<% end %>